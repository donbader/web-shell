# syntax=docker/dockerfile:1
# Development Dockerfile for Web Shell Frontend
# Optimized for development with better caching

FROM node:20-alpine

WORKDIR /app

# Copy package files first for better layer caching
COPY package*.json ./

# Install dependencies with caching
RUN npm install && \
    npm cache clean --force

# Copy source code (separate layer for better rebuild performance)
COPY . .

# Note: Running as root in development mode to avoid permission issues with volume mounts
# In production, we use non-root user

# Expose Vite dev server port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
