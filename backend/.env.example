# Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# HTTPS/SSL Configuration
# Enable HTTPS in production for encrypted connections (HTTPS/WSS)
# Requires valid SSL certificates at specified paths
USE_HTTPS=false
SSL_KEY_PATH=./certs/key.pem
SSL_CERT_PATH=./certs/cert.pem
HTTP_PORT=80

# Production HTTPS Example:
# USE_HTTPS=true
# SSL_KEY_PATH=/etc/ssl/private/server.key
# SSL_CERT_PATH=/etc/ssl/certs/server.crt

# Authentication (Phase 6)
AUTH_ENABLED=false
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-secret

# JWT Secret - CRITICAL SECURITY REQUIREMENT
# REQUIRED in production with minimum 32 characters
# Generate secure secret with: openssl rand -base64 32
# Example: JWT_SECRET=AbCdEfGh1234567890IjKlMnOpQrStUvWxYz==
# JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARS_REQUIRED

# CORS Configuration
CORS_ORIGINS=http://localhost:5173

# Session Management
SESSION_EXPIRY=24h
MAX_SESSIONS_PER_USER=5
IDLE_TIMEOUT_MINUTES=30
