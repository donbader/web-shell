# Docker Environment Configuration
# Copy this file to .env and adjust values as needed

# Backend Configuration
AUTH_ENABLED=false
CORS_ORIGINS=http://localhost:3377
MAX_SESSIONS_PER_USER=5
IDLE_TIMEOUT_MINUTES=30
SESSION_EXPIRY=24h
JWT_SECRET=your-secret-key-change-this-in-production-min-32-chars
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=admin123

# Frontend Configuration (build-time variables)
VITE_API_URL=http://localhost:3366
VITE_WS_URL=ws://localhost:3366
VITE_AUTH_ENABLED=false

# Production Example:
# AUTH_ENABLED=true
# VITE_AUTH_ENABLED=true
# JWT_SECRET=your-very-secure-random-secret-key-minimum-32-characters-long
# CORS_ORIGINS=https://yourdomain.com
# VITE_API_URL=https://api.yourdomain.com
# VITE_WS_URL=wss://api.yourdomain.com
# DEFAULT_PASSWORD=change-this-to-secure-password
